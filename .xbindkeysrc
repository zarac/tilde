"kill `pidof compiz`"
  Shift+Mod4 + q

"urxvt -sl 10000"
  Mod4 + Return

"urxvt -e ncmpcpp"
  Mod4 + F1

"urxvt -e transmission-remote-cli -c localhost"
  Mod4 + F2

"urxvt -e transmission-remote-cli -c zarac.se"
  Mod4 + Shift + F2

"dmenu_run"
  Mod4 + r

"pavucontrol"
  Mod4 + v

"urxvt -e alsamixer"
  Mod4 + Shift + v

"setxkbmap us"
  Mod4 + e

"setxkbmap se"
  Mod4 + s

"pamixer --allow-boost --increase 5; aplay /srv/sound/drum/histicks.wav"
  XF86AudioRaiseVolume

"pamixer --allow-boost --decrease 5; aplay /srv/sound/drum/histicks.wav"
  XF86AudioLowerVolume

"pamixer --toggle-mute; aplay /srv/sound/drum/histicks.wav"
  XF86AudioMute

